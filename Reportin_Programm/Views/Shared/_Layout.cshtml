<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Reportin_Programm</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .navbar {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .navbar-brand {
            color: white !important;
            font-weight: bold;
            transition: transform 0.3s ease;
        }

            .navbar-brand:hover {
                transform: scale(1.05);
            }

        .nav-item .nav-link {
            position: relative;
            transition: all 0.3s ease;
            border-radius: 10px;
            margin: 0 5px;
            padding: 8px 15px;
            font-weight: 600;
            color: rgba(255,255,255,0.7) !important;
            overflow: hidden;
        }

            .nav-item .nav-link::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: rgba(255,255,255,0.2);
                transition: all 0.5s ease;
                z-index: -1;
            }

            .nav-item .nav-link:hover::before {
                left: 0;
            }

            /* Специфичные цвета для разных разделов */
            .nav-item .nav-link.home {
                background-color: #28a745;
                color: white !important;
            }

            .nav-item .nav-link.privacy {
                background-color: #17a2b8;
                color: white !important;
            }

            .nav-item .nav-link.customers {
                background-color: #ffc107;
                color: white !important;
            }

            .nav-item .nav-link.goods {
                background-color: #dc3545;
                color: white !important;
            }

            .nav-item .nav-link.suppliers {
                background-color: #6f42c1;
                color: white !important;
            }

            .nav-item .nav-link.warehouses {
                background-color: #fd7e14;
                color: white !important;
            }

            .nav-item .nav-link:hover {
                transform: scale(1.05);
                box-shadow: 0 4px 6px rgba(0,0,0,0.2);
            }

        /* Footer стили */
        footer {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            color: white;
            padding: 20px 0;
        }

            footer a {
                color: rgba(255,255,255,0.7);
                transition: color 0.3s ease;
            }

                footer a:hover {
                    color: white;
                    text-decoration: none;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    Reportin_Programm
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link home" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-2"></i>Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link customers" asp-area="" asp-controller="Customer" asp-action="Index">
                                <i class="fa-solid fa-people-carry-box fa-sm"></i>Customers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link goods" asp-area="" asp-controller="Good" asp-action="Index">
                                <i class="fas fa-box me-2"></i>Goods
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link suppliers" asp-area="" asp-controller="Supplier" asp-action="Index">
                                <i class="fas fa-truck me-2"></i>Suppliers
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link warehouses" asp-area="" asp-controller="Warehouse" asp-action="Index">
                                <i class="fas fa-warehouse me-2"></i>Warehouses
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link privacy" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt me-2"></i>Privacy
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-center py-4">
        <div class="container">
            &copy; 2025 - Reportin_Programm |
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
