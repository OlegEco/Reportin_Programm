@model IEnumerable<Reportin_Programm.Models.Employee>

<!DOCTYPE html>
<html>
<head>
    <title>Employee List</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Employee List</h1>
        <a href="/Employee/SignUp" class="btn btn-primary mb-3">Add New Employee</a>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Username</td>
                        <td>@employee.Email</td>
                        <td>@employee.Phone</td>
                        <td>
                            <a href="/Employee/Details/@employee.Id" class="btn btn-info btn-sm">Details</a>
                            <a href="/Employee/Update/@employee.Id" class="btn btn-warning btn-sm">Edit</a>
                            <a href="/Employee/Delete/@employee.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>