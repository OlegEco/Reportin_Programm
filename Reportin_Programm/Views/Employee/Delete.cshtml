@model Reportin_Programm.Models.Employee

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Delete Employee</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .card {
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }

        .card-header {
            background: linear-gradient(45deg, #4e73df, #224abe);
            color: white;
        }

        .info-item {
            padding: 1rem;
            border-bottom: 1px solid #e3e6f0;
        }

            .info-item:last-child {
                border-bottom: none;
            }

        .info-label {
            color: #4e73df;
            font-weight: 600;
        }

        .info-icon {
            width: 35px;
            height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            margin-right: 1rem;
        }

        .alert-delete {
            background-color: #fff3f3;
            border-left: 4px solid #dc3545;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container py-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold">Delete Employee</h6>
            </div>
            <div class="card-body">
                <div class="alert-delete">
                    <div class="d-flex align-items-center">
                        <i class="fas fa-exclamation-triangle text-danger me-3 fa-2x"></i>
                        <div>
                            <h5 class="text-danger mb-1">Warning</h5>
                            <p class="mb-0">Are you sure you want to delete this employee? This action cannot be undone.</p>
                        </div>
                    </div>
                </div>

                <div class="info-item d-flex align-items-center">
                    <div class="info-icon bg-primary-subtle">
                        <i class="fas fa-user text-primary"></i>
                    </div>
                    <div>
                        <div class="info-label">Username</div>
                        <div>@Model.Username</div>
                    </div>
                </div>

                <div class="info-item d-flex align-items-center">
                    <div class="info-icon bg-warning-subtle">
                        <i class="fas fa-envelope text-warning"></i>
                    </div>
                    <div>
                        <div class="info-label">Email</div>
                        <div>@Model.Email</div>
                    </div>
                </div>

                <div class="info-item d-flex align-items-center">
                    <div class="info-icon bg-success-subtle">
                        <i class="fas fa-phone text-success"></i>
                    </div>
                    <div>
                        <div class="info-label">Phone</div>
                        <div>@Model.Phone</div>
                    </div>
                </div>

                <form asp-action="Delete" method="post" class="mt-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
