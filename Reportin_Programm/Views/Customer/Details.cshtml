@model Reportin_Programm.Models.Customer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Customer Details</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .card {
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }

        .card-header {
            background: linear-gradient(45deg, #4e73df, #224abe);
            color: white;
        }

        .info-item {
            padding: 1rem;
            border-bottom: 1px solid #e3e6f0;
        }

            .info-item:last-child {
                border-bottom: none;
            }

        .info-label {
            color: #4e73df;
            font-weight: 600;
        }

        .info-icon {
            width: 35px;
            height: 35px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            margin-right: 1rem;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container py-4">
        <div class="card shadow">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold">Customer Details</h6>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit me-2"></i>Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="fas fa-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </div>
            <div class="card-body">
                <div class="info-item d-flex align-items-center">
                    <div class="info-icon bg-primary-subtle">
                        <i class="fas fa-user text-primary"></i>
                    </div>
                    <div>
                        <div class="info-label">Full Name</div>
                        <div>@Model.FirstName @Model.LastName</div>
                    </div>
                </div>

                <div class="info-item d-flex align-items-center">
                    <div class="info-icon bg-danger-subtle">
                        <i class="fas fa-envelope text-danger"></i>
                    </div>
                    <div>
                        <div class="info-label">Email</div>
                        <div>@Model.Email</div>
                    </div>
                </div>

                <div class="info-item d-flex align-items-center">
                    <div class="info-icon bg-info-subtle">
                        <i class="fas fa-phone text-info"></i>
                    </div>
                    <div>
                        <div class="info-label">Phone</div>
                        <div>@Model.Phone</div>
                    </div>
                </div>

                <div class="info-item d-flex align-items-center">
                    <div class="info-icon bg-warning-subtle">
                        <i class="fas fa-birthday-cake text-warning"></i>
                    </div>
                    <div>
                        <div class="info-label">Age</div>
                        <div>@Model.Age</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
